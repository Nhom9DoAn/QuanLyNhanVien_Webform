@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Đăng Nhập - Hệ Thống Quản Lý Nhân Sự</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/css/style_login.css" rel="stylesheet" type="text/css" />
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700&family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
</head>
<body>
    <div class="wrapper">
        <div class="form-box">
            <h2>ĐĂNG NHẬP HỆ THỐNG</h2>
            <form id="loginForm">
                <div class="input-box">
                    <input type="text" id="TenDN" name="TenDN" required autocomplete="username" />
                    <label>Tên đăng nhập</label>
                    <div class="error" id="errorTenDN"></div>
                </div>
                <div class="input-box">
                    <div class="password-box">
                        <input type="password" id="MatKhau" name="MatKhau" required autocomplete="current-password" />
                        <label>Mật khẩu</label>
                        <button class="toggle-password" onclick="togglePassword()">
                            <ion-icon name="eye-outline" id="toggleIcon"></ion-icon>
                        </button>
                    </div>
                    <div class="error" id="errorMatKhau"></div>
                </div>
                <div class="remember-forgot">
                    <div class="remember-me">
                        <input type="checkbox" id="remember" name="remember">
                        <label for="remember">Nhớ mật khẩu</label>
                    </div>
                </div>
                <button type="button" onclick="login()">ĐĂNG NHẬP</button>
            </form>

            <div id="loginMessage"></div>
            <div class="register-link">
                <a href="@Url.Action("DangKy","TaiKhoan")">
                    <ion-icon name="person-add-outline"></ion-icon>
                    Chưa có tài khoản? Đăng ký ngay
                </a>
            </div>
        </div>
    </div>

    <script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>
    <script src="~/Content/js/login.js"></script>

</body>
</html>