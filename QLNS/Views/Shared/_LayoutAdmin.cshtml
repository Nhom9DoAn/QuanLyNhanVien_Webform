    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css">

    <style>
        body {
            font-family: 'Roboto', sans-serif;
            background: #f8f9fa;
            min-height: 100vh;
            position: relative;
        }

        /* Header styles */
        .header__top {
            background: #fff;
            padding: 10px 0;
            border-bottom: 1px solid #dee2e6;
            position: fixed;
            width: 100%;
            top: 0;
            z-index: 1000;
        }

        .header__top__right {
            display: flex;
            align-items: center;
            justify-content: flex-end;
            gap: 20px;
        }

        .header__top__right__social a {
            color: #6c757d;
            margin-right: 15px;
            text-decoration: none;
        }

            .header__top__right__social a:hover {
                color: #0d6efd;
            }

        .header__top__right__language {
            display: flex;
            align-items: center;
            cursor: pointer;
            position: relative;
        }

            .header__top__right__language img {
                margin-right: 5px;
            }

            .header__top__right__language ul {
                display: none;
                position: absolute;
                top: 100%;
                right: 0;
                background: #fff;
                border: 1px solid #dee2e6;
                border-radius: 4px;
                padding: 5px 0;
                min-width: 120px;
                list-style: none;
            }

            .header__top__right__language:hover ul {
                display: block;
            }

            .header__top__right__language ul li a {
                display: block;
                padding: 5px 15px;
                color: #212529;
                text-decoration: none;
            }

                .header__top__right__language ul li a:hover {
                    background: #f8f9fa;
                }

        /* Sidebar styles */
        .sidebar {
            width: 250px;
            background: #343a40;
            position: fixed;
            top: 45px;
            left: 0;
            height: 100%;
            overflow-y: auto;
            transition: 0.3s;
            z-index: 999;
        }

        .profile {
            padding: 20px;
            text-align: center;
            border-bottom: 1px solid rgba(255,255,255,0.1);
        }

            .profile img {
                width: 80px;
                height: 80px;
                border-radius: 50%;
                margin-bottom: 10px;
            }

        .infor-admin {
            color: #fff;
        }

            .infor-admin h3 {
                margin: 0;
                font-size: 18px;
            }

            .infor-admin p {
                margin: 5px 0 0;
                font-size: 14px;
                color: #adb5bd;
            }

        .sidebar nav ul {
            list-style: none;
            padding: 0;
            margin: 0;
        }

            .sidebar nav ul li a {
                display: flex;
                align-items: center;
                padding: 12px 20px;
                color: #fff;
                text-decoration: none;
                transition: 0.3s;
            }

                .sidebar nav ul li a:hover {
                    background: rgba(255,255,255,0.1);
                }

                .sidebar nav ul li a i {
                    margin-right: 10px;
                    width: 20px;
                    text-align: center;
                }

        .submenu {
            background: rgba(0,0,0,0.2);
            display: none;
        }

            .submenu.active {
                display: block;
            }

            .submenu a {
                padding-left: 50px !important;
            }

        /* Main content */
        .main-content {
            margin-left: 250px;
            padding: 70px 20px 20px;
            min-height: calc(100vh - 50px);
            transition: 0.3s;
        }

        /* Footer */
        .footer {
            margin-left: 250px;
            background: #fff;
            padding: 40px 0;
            border-top: 1px solid #dee2e6;
        }

            .footer h6 {
                font-weight: 600;
                margin-bottom: 20px;
            }

            .footer ul {
                padding: 0;
                list-style: none;
            }

                .footer ul li {
                    margin-bottom: 10px;
                }

                    .footer ul li a {
                        color: #6c757d;
                        text-decoration: none;
                    }

                        .footer ul li a:hover {
                            color: #0d6efd;
                        }

        .footer__widget form input {
            border-radius: 4px 0 0 4px !important;
        }

        .footer__widget form button {
            border-radius: 0 4px 4px 0 !important;
        }

        /* Toggle button for mobile */
        .sidebar-toggle {
            display: none;
            position: fixed;
            top: 10px;
            left: 10px;
            z-index: 1001;
            background: none;
            border: none;
            color: #000;
            font-size: 20px;
            cursor: pointer;
        }

        /* Responsive styles */
        @@media (max-width: 991px) {
            .sidebar {
                left: -250px;
            }

                .sidebar.active {
                    left: 0;
                }

            .main-content,
            .footer {
                margin-left: 0;
            }

            .sidebar-toggle {
                display: block;
            }

            .header__top__right__social,
            .header__top__right__language {
                display: none;
            }
        }

        @@media (max-width: 767px) {
            .footer {
                text-align: center;
            }

            .footer__widget {
                margin-bottom: 30px;
            }
        }
    </style>
</head>
